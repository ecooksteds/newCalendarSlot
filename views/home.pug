extends layout

mixin message(opp, name)
    if(opp)
        h1.greeting Logged in as 
            span=name 
    else 
        h1.greeting Welcome 
            span=name 
            |  to Calendar Slot


append links 
    li(style="float: right;")
        a(href="/loggout") Loggout 

block content
    .dashboard 
        .user 
            +message(opp, name)
            div.set-margin
               a.button-style(href="/meetingdashboard") Create Meeting
            div.set-margin2
               a.button-style(href="/joinmeeting") Join Meeting
            div.set-margin2
               a.button-style(href="/meetingpage") Check Your Meetings