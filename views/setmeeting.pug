extends layout
append links 
    li(style="float: right;")
        a(href="/loggout") Loggout 
block content
    h2.h2-style Meeting Slot Page
    form#form-data-id(onsubmit="updateSlot(event)")
        fieldset.back-color
            legend
            table.set-padding 
                tr 
                    th Slot Id: 
                    td 
                        input(type="text" required value=slotId readonly id="slotId" name="slotId")
                tr
                    th Day: 
                    td 
                        input(type="text" readonly required id="day" name="day")
                tr 
                    th Date: 
                    td 
                        input(type="date" required onchange="onChageDate(event)" id="date" name="date")  
                tr
                    th Time Start: 
                    td 
                        input(type="text" required id="timeStart" name="day")
                tr
                    th Time End: 
                    td 
                        input(type="text" required id="timeEnd" name="day")                     
                tr 
                    td
                    td
                        input(type="submit" value="Submit")
                        a.back(href="/home") Home
