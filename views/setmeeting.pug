extends layout
append links 
    li(style="float: right;")
        a(href="/user/logout") Logout 
block content
    h2.h2-style Meeting Slot Page
    form#form-data-id(onsubmit="updateSlot(event)")
        fieldset.back-color
            legend
            table.set-padding 
                tr 
                    th Slot Id: 
                    td 
                        input(type="text" required value=slotId readonly id="slotId" name="slotId")
                tr
                    th Day: 
                    td 
                        input(type="text" readonly required id="day" name="day")
                tr 
                    th Date: 
                    td 
                        input(type="date" required onchange="onChageDate(event)" id="date" name="date")  
                tr
                    th Time Start: 
                    td 
                        input(type="text" required id="timeStart" name="day" placeholder="hh:mm p")
                tr
                    th Time End: 
                    td 
                        input(type="text" required id="timeEnd" name="day" placeholder="hh:mm p")
                tr 
                    td
                    td
                        input(type="submit" value="Submit")
                        a.back(href="/") Home
    script.
        document.querySelectorAll("#timeStart, #timeEnd").forEach((el) => {
            el.addEventListener('focusout', (e) => {
                let val = e.target.value.toUpperCase().replace(" ", "");
                console.log(val);
                if(/^[0-9]{1,2}:[0-9]{1,2}(\s+)?(AM|PM)$/.test(val)){
                    el.value = val;
                    return;
                }
                alert('time should be in [hh:mm p] format')
                el.value = "";
            })
        })